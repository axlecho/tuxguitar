<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/Dialog"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/key_signature_dlg_ks_label"
            style="@style/TextViewLabel"

            android:text="@string/key_signature_dlg_ks_label" />

        <Spinner android:id="@+id/key_signature_dlg_ks_value" />


        <CheckBox
            android:id="@+id/key_signature_dlg_options_apply_to_end"
            android:text="@string/key_signature_dlg_options_apply_to_end" />

    </LinearLayout>

</ScrollView>