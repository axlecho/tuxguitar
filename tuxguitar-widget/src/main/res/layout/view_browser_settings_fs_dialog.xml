<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Dialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/browser_settings_fs_name_label"
        style="@style/TextViewLabel"
        android:text="@string/browser_settings_fs_name_label" />

    <EditText
        android:id="@+id/browser_settings_fs_name_value"
        android:imeOptions="actionDone"
        android:inputType="text" />

    <TextView
        android:id="@+id/browser_settings_fs_path_label"
        style="@style/TextViewLabel"
        android:text="@string/browser_settings_fs_path_label" />

    <TextView
        android:id="@+id/browser_settings_fs_path_preview"
        style="@style/TextViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ListView
        android:id="@+id/browser_settings_fs_path_value_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>