<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/browser_collections_item_name"
        style="@style/TextViewLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/browser_collections_item_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/browser_collections_item_icon"
        android:layout_toLeftOf="@+id/browser_collections_item_icon"
        android:gravity="fill_horizontal|center_vertical"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/browser_collections_item_icon"
        style="@style/BrowserCollectionsDlgImageButtonDelete"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/browser_remove_collection"
        android:gravity="center" />

</RelativeLayout>