<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ========================================================= -->
    <!-- ==== MAIN =============================================== -->
    <!-- ========================================================= -->

    <style name="MainImageButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">6dip</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <!-- ========================================================= -->
    <!-- ==== TAB KEYBOARD ======================================= -->
    <!-- ========================================================= -->

    <style name="TabKeyBoard">
        <item name="android:background">@color/dark</item>
    </style>

    <style name="TabKeyBoardButton">
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_text_light</item>

        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">0sp</item>
    </style>

    <style name="TabKeyBoardImageButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">0sp</item>
    </style>

    <style name="TabKeyBoardImageButtonInsert" parent="TabKeyBoardImageButton">
        <item name="android:src">@drawable/ic_keyboard_arrow_right_white_24dp</item>
    </style>

    <style name="TabKeyBoardImageButtonDelete" parent="TabKeyBoardImageButton">
        <item name="android:src">@drawable/ic_keyboard_arrow_left_white_24dp</item>
    </style>

    <style name="TabKeyBoardImageButtonDuration" parent="TabKeyBoardImageButton">
        <item name="android:src">@drawable/ic_music_note_white_24dp</item>
    </style>

    <style name="TabKeyBoardImageButtonDurationIncrement" parent="TabKeyBoardImageButton">
        <item name="android:src">@drawable/ic_keyboard_arrow_up_white_24dp</item>
    </style>

    <style name="TabKeyBoardImageButtonDurationDecrement" parent="TabKeyBoardImageButton">
        <item name="android:src">@drawable/ic_keyboard_arrow_down_white_24dp</item>
    </style>

    <style name="TabKeyBoardImageButtonRight" parent="TabKeyBoardImageButton">
        <item name="android:src">@drawable/ic_keyboard_arrow_right_white_24dp</item>
    </style>

    <style name="TabKeyBoardImageButtonLeft" parent="TabKeyBoardImageButton">
        <item name="android:src">@drawable/ic_keyboard_arrow_left_white_24dp</item>
    </style>

    <style name="TabKeyBoardImageButtonUp" parent="TabKeyBoardImageButton">
        <item name="android:src">@drawable/ic_keyboard_arrow_up_white_24dp</item>
    </style>

    <style name="TabKeyBoardImageButtonDown" parent="TabKeyBoardImageButton">
        <item name="android:src">@drawable/ic_keyboard_arrow_down_white_24dp</item>
    </style>

    <!-- ========================================================= -->
    <!-- ==== DRAWER ============================================= -->
    <!-- ========================================================= -->

    <style name="MainDrawerListItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8sp</item>
        <item name="android:textColor">@color/color_text_light</item>
    </style>

    <style name="MainDrawerImageButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">6dip</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="MainDrawerImageButtonMixer" parent="BrowserImageButton">
        <item name="android:src">@drawable/ic_volume_up_white_24dp</item>
    </style>

    <style name="MainDrawerImageButtonInfo" parent="BrowserImageButton">
        <item name="android:src">@drawable/ic_info_outline_white_24dp</item>
    </style>

    <style name="MainDrawerToolbar">
        <item name="android:background">@color/medium</item>
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="MainDrawerTransportPanel">
        <item name="android:background">@color/medium</item>
    </style>

    <!-- ========================================================= -->
    <!-- ==== BROWSER ============================================ -->
    <!-- ========================================================= -->

    <style name="BrowserPanel">
        <item name="android:background">@color/dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="BrowserImageButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">6dip</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="BrowserInputControl">
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BrowserSpinnerItem" parent="BrowserInputControl">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
    </style>


    <style name="BrowserCollectionsPanel" parent="BrowserPanel" />

    <style name="BrowserCollectionsSpinner" parent="BrowserInputControl">
        <item name="android:padding">12dip</item>
    </style>

    <style name="BrowserSavePanel" parent="BrowserPanel" />

    <style name="BrowserSaveEditText" parent="BrowserInputControl" />

    <style name="BrowserSaveSpinner" parent="BrowserInputControl" />

    <style name="BrowserSaveImageButton" parent="BrowserImageButton">
        <item name="android:src">@drawable/ic_save_white_24dp</item>
    </style>

    <style name="BrowserElementIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BrowserElementIconFile">
        <item name="android:src">@drawable/browser_file</item>
    </style>

    <style name="BrowserElementIconFolder">
        <item name="android:src">@drawable/browser_folder</item>
    </style>

    <style name="BrowserElementName">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8sp</item>
    </style>

    <style name="BrowserCollectionsDlgImageButtonSubmit" parent="BrowserImageButton">
        <item name="android:src">@drawable/ic_send_gray_24dp</item>
    </style>

    <style name="BrowserCollectionsDlgImageButtonDelete" parent="BrowserImageButton">
        <item name="android:src">@drawable/ic_delete_gray_24dp</item>
    </style>
    <!-- ========================================================= -->
    <!-- ==== CHANNEL LIST ======================================= -->
    <!-- ========================================================= -->

    <style name="ChannelList">
        <item name="android:background">@color/darkest</item>
    </style>

    <style name="ChannelListItem">
        <item name="android:background">@color/darkest</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="ChannelListItemTextView">
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_text_light</item>
    </style>

    <style name="ChannelListItemImageButton">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ChannelListItemDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light</item>
    </style>
	
	<style name="TrackVolumeCheckboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_track_volume_style</item>
    </style>
	
	    <style name="TextViewLabel">
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>
	
	    <style name="Dialog">
        <item name="android:padding">10dp</item>
    </style>

    <style name="DialogSectionSpacer">
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="DialogImageButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">6dip</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="DialogImageButtonSettings" parent="DialogImageButton">
        <item name="android:src">@drawable/ic_settings_gray_24dp</item>
    </style>
	
	    <style name="HeadTitleDivider2">
        <item name="android:background">#27abe2</item>
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="HeadTitleText2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="styleHorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <style name="styleHorizontalLine2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">#ededeb</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

</resources>
