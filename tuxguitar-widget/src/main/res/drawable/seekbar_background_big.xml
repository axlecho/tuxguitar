<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip"/>
            <gradient
                android:angle="0"
                android:centerColor="#bbd9d9d9"
                android:centerY="0.75"
                android:endColor="#bbd9d9d9"
                android:startColor="#bbd9d9d9"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:angle="0"
                    android:centerColor="#bbd9d9d9"
                    android:centerY="0.75"
                    android:endColor="#bbd9d9d9"
                    android:startColor="#bbd9d9d9"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:angle="0"
                    android:centerColor="#56abe2"
                    android:centerY="0.75"
                    android:endColor="#66abe2"
                    android:startColor="#5529abe2"/>
            </shape>
        </clip>
    </item>

</layer-list>